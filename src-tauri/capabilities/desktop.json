{
    "identifier": "desktop-capability",
    "platforms": ["macOS", "windows", "linux"],
    "windows": ["main"],
    "permissions": [
        "updater:default",
        "dialog:default",
        "dialog:allow-message",
        "dialog:allow-confirm",
        "opener:default",
        {
            "identifier": "opener:allow-open-path",
            "allow": [
                {
                    "path": "$HOME/.cache/huggingface/lerobot/ai_models"
                }
            ]
        }
    ]
}
