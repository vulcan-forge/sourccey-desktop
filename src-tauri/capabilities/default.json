{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "Capability for the main window",
    "windows": ["main"],
    "permissions": [
        "core:default",
        "opener:default",
        {
            "identifier": "opener:allow-open-path",
            "allow": [
                {
                    "path": "$HOME/.cache/huggingface/lerobot/ai_models"
                }
            ]
        },
        "dialog:default",
        "dialog:allow-message",
        "dialog:allow-open",
        "fs:default",
        "fs:allow-read",
        "fs:allow-write",
        "fs:allow-read-file",
        "fs:allow-write-file",
        "fs:allow-read-dir",
        "fs:allow-copy-file",
        "fs:allow-create",
        "fs:allow-remove",
        "fs:allow-rename",
        "process:default",
        "process:allow-exit"
    ]
}
